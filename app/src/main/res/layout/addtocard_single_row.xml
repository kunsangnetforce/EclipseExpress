<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"

    android:id="@+id/cardview_addtocard"


    android:layout_margin="10dp"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:weightSum="3"
            android:layout_height="0dp">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/demo_review_pic"
                    android:scaleType="fitStart"
                    android:id="@+id/imageView13" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:weightSum="10"
                android:layout_gravity="center_horizontal"

                android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
android:layout_marginTop="5dp"
    android:weightSum="2"
    android:layout_height="wrap_content">

                <io.techery.properratingbar.ProperRatingBar
                    android:id="@+id/lowerRatingBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
android:layout_weight="1.2"
                    android:layout_marginLeft="5dp"
                    app:prb_defaultRating="4"

android:layout_gravity="center_vertical"
                    app:prb_tickNormalDrawable="@mipmap/star_blank"
                    app:prb_tickSelectedDrawable="@mipmap/star_icon_full"
                    android:layout_toRightOf="@+id/profile_image"
                    app:prb_totalTicks="5"
                    app:prb_clickable="true"
                    android:layout_below="@+id/month_txt"
                    app:prb_tickSpacing="1dp"

                    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(400)"
        android:layout_weight="0.8"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView59" />
</LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_marginTop="10dp"
                 android:layout_weight="2"
                 android:layout_height="wrap_content">
                 <TextView
                    android:layout_width="0dp"
                     android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Top &amp; Tees"
                     android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                     android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView14" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="0.8"
                     android:layout_height="wrap_content"
                     android:textAppearance="?android:attr/textAppearanceSmall"
                     android:text="(Out of stock)"
                     android:textSize="10sp"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/textView60" />
             </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Red Tshirts with red trousers"
                    android:textSize="8sp"
                    android:layout_marginTop="10dp"


                    android:id="@+id/textView31"
                    android:layout_marginLeft="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                   android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="RS 656 "
                        android:textSize="8sp"

                        android:textStyle="bold"

                        android:id="@+id/textView32" />


                </LinearLayout>
<LinearLayout
    android:layout_width="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
 android:weightSum="2"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@mipmap/box_dropdown"
    android:layout_height="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Qty:"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/textView34"
                    android:textSize="12sp"



                    />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_addto_card"

        android:layout_weight="1" />
</LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:id="@+id/imageView14"
                        android:src="@drawable/delete_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>