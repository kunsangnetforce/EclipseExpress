<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
    android:background="#ffffff"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:src="@drawable/david"
                android:id="@+id/imageView10" />

        </RelativeLayout>

      <LinearLayout
    android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_weight="2"
          android:layout_marginLeft="5dp"
    android:layout_height="match_parent">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
            android:text="pink color with white color"
       android:maxLines="2"

            android:textStyle="bold"
            android:textSize="14sp"
android:textColor="#8C8C8C"
            android:id="@+id/textView25" />

          <RelativeLayout
              android:layout_width="0dp"
        android:layout_weight="1"
android:gravity="center_vertical"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="3dp"

            android:layout_toRightOf="@+id/textView25"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="40% OFF"
                  android:textStyle="bold"
                  android:layout_marginRight="5dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:padding="4dp"
                  android:background="@drawable/relative_bg"
                  android:textColor="#ED4812"
                  android:textSize="10sp"
                  android:id="@+id/textView85"
                  android:layout_weight="1" />
          </RelativeLayout>

      </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="5dp"
           android:layout_height="match_parent">

           <RatingBar
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:clickable="true"
            style="?android:attr/ratingBarStyleSmall" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:attr/textAppearanceSmall"
               android:text="(548)"
               android:textColor="#ED4812"
               android:layout_marginLeft="5dp"
               android:textSize="14sp"
               android:id="@+id/textView86"
               android:layout_alignBottom="@+id/ratingBar"
               android:layout_toRightOf="@+id/ratingBar"
               android:layout_toEndOf="@+id/ratingBar" />
       </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="RS 1099"
            android:textSize="14sp"
            android:layout_gravity="left"

            android:textStyle="bold"

            android:id="@+id/textView27" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="RS 656"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#8C8C8C"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView28"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView27"
            android:layout_toEndOf="@+id/textView27" />
    </RelativeLayout>

    </LinearLayout>
