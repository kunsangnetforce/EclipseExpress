<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/cardview_myreviews_inner"


    android:layout_margin="10dp"
    android:gravity="center">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
android:layout_margin="5dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="posted on 2 aug 2016"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView43" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Review by me"
                android:textColor="#Ed4812"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/textView44" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <io.techery.properratingbar.ProperRatingBar
                android:id="@+id/lowerRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:prb_defaultRating="4"
                android:layout_marginTop="10dp"

                app:prb_tickNormalDrawable="@mipmap/star_blank"
                app:prb_tickSelectedDrawable="@mipmap/star_icon_full"
                android:layout_toRightOf="@+id/profile_image"
                app:prb_totalTicks="5"
                app:prb_clickable="true"
                android:layout_below="@+id/month_txt"
                app:prb_tickSpacing="3dp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="nice product,nice color,greate service,quality is good "
                android:id="@+id/textView45" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

