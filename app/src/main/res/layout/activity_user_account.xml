<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/l_container"
    android:background="@color/grey">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <include
            android:id="@+id/toolbar3"
            layout="@layout/app_bar" />
    </android.support.design.widget.AppBarLayout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:tag="@string/dashboardfragment"

        tools:context="com.netforceinfotech.eclipseexpress.Account.User_account">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!--<com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout-->
                <!--android:id="@+id/swipyrefreshlayout"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--app:srl_direction="bottom">-->

                <ScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/scroll_down"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="My Orders"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="View all Orders"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/colorSecondaryText"
                                android:id="@+id/textView7" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="10dp"
                                android:background="@color/colorPrimary"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="My WishList"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView8" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="View All Wishlist"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorSecondaryText"
                                android:id="@+id/textView9" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="10dp"

                                android:background="@color/colorPrimary"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="My Reviews"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"

                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="View Your Reviews"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/colorSecondaryText"
                                android:id="@+id/textView11" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="10dp"

                                android:background="@color/colorPrimary" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="My Address"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorSecondaryText"
                                android:text="View Address"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/textView13" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="10dp"
                                android:background="@color/colorPrimary"
                                 />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="200dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Account Setting"

                                android:textColor="@color/colorPrimary"
android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/textView14" />

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textColor="@color/white"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:paddingLeft="50dp"
                                android:paddingRight="50dp"
                                android:background="@color/colorPrimary"
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/button2" />

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            <!--</com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>-->
        </LinearLayout>

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/max_height_header"
            android:background="@color/white">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

android:id="@+id/linearlayout_container"
                android:background="@color/colorPrimary"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="96dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/david"
                        app:civ_border_width="10dp"
                        app:civ_border_color="#FFF45622"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/profile_image"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/relativeLayout2">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pencil_box"
                            android:layout_centerVertical="true"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Edit Profile"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/imageView3"
                            android:id="@+id/textView3" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Nancy Zen"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:id="@+id/textView4"
                        android:layout_below="@+id/relativeLayout2"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="nancyzen@gmail.com"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/textView4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="26dp" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>